<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
	<managed-bean>
		<managed-bean-name>controller</managed-bean-name>
		<managed-bean-class>com.learn.pf.Controller</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>userView</property-name>
			<property-class>com.learn.pf.UserView</property-class>
			<value>#{userView}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>userView</managed-bean-name>
		<managed-bean-class>com.learn.pf.UserView</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<application />
</faces-config>
